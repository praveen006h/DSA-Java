{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile and Run Currently Opened File",
            "type": "shell",
            "command": "sh",
            "args": [
                "-c",
                "javac ${relativeFile} && java ${fileBasenameNoExtension} < input.txt > output.txt"
            ],
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "py",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}
